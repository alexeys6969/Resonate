<Page x:Class="Resonate_course_project.Pages.Authorization"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Resonate_course_project.Pages"
      mc:Ignorable="d" 
      Title="Authorization"
      Background="#131411">

    <ScrollViewer VerticalScrollBarVisibility="Hidden">
        <Grid>
            <Grid Background="#FF9E49" VerticalAlignment="Top">
                <TextBlock Text="Авторизация" Style="{StaticResource HeaderTB}"/>
            </Grid>
            <StackPanel Margin="0,51,0,0">
                <TextBlock Text="Введите логин" Style="{StaticResource HeaderTB}" Margin="65,35,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" FontWeight="Regular" FontSize="20"/>
                <TextBox x:Name="login" Style="{StaticResource RoundedTextBox}" Height="25" Margin="65,5,65,0"/>
                <TextBlock Text="Введите пароль" Style="{StaticResource HeaderTB}" Margin="65,25,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" FontWeight="Regular" FontSize="20"/>
                <PasswordBox x:Name="password" Style="{StaticResource RoundedPasswordBox}" Height="25" Margin="65,5,65,0" />
                <Button Click="AuthClk" Style="{StaticResource RoundedButton}" VerticalAlignment="Bottom" Height="25" Content="Войти" Margin="65,175,65,40"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Page>
